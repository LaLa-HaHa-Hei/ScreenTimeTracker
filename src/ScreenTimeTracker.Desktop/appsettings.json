{
    "DatabaseSettings": {
        "DBFilePath": "./Data/ScreenTimeTracker.db"
    },
    "UserConfigStorageSettings" : {
        "StorageFilePath": "./Data/UserConfig.json"
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://localhost:5124"
            }
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext"
        ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./Logs/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7
                }
            }
        ]
    }
}