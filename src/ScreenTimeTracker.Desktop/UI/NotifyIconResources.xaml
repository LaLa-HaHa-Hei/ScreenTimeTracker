<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:local="clr-namespace:ScreenTimeTracker.Desktop.UI">

    <ContextMenu
        x:Shared="false"
        x:Key="SysTrayMenu">
        <MenuItem
            Header="开机自启动"
            Command="{Binding ToggleStartupCommand}"
            IsChecked="{Binding IsStartupEnabled}"/>
        <Separator/>
        <MenuItem
            Header="显示"
            Command="{Binding OpenWebUICommand}"/>
        <!-- <MenuItem
            Header="显示窗口"
            Command="{Binding ShowWindowCommand}"/> -->
        <!-- <MenuItem
            Header="隐藏窗口"
            Command="{Binding HideWindowCommand}"/> -->
        <Separator/>
        <MenuItem
            Header="退出"
            Command="{Binding ExitApplicationCommand}"/>
    </ContextMenu>

    <tb:TaskbarIcon
        x:Key="NotifyIcon"
        IconSource="/Resources/Icon.ico"
        ToolTipText="ScreenTimeTracker"
        LeftClickCommand="{Binding OpenWebUICommand}"
        NoLeftClickDelay="True"
        ContextMenu="{StaticResource SysTrayMenu}">
    </tb:TaskbarIcon>

</ResourceDictionary>