{
    "TrackerSettings": {
        "PollingIntervalMilliseconds": 1000,
        "ProcessInfoStaleThresholdMinutes": 600,
        "ProcessIconDirPath": "./Data/ProcessIcons",
        "IdleTimeoutMinutes": 10
    },
    "AggregationSettings": {
        "PollingIntervalMinutes": 20
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "ScreenTimeTracker.WorkerService.AggregationWorker": "Debug",
                "ScreenTimeTracker.WorkerService.TrakcerWorker": "Debug"
            }
        },
        "Enrich": [
            "FromLogContext"
        ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./Logs/WorkerService/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7
                }
            }
        ]
    }
}